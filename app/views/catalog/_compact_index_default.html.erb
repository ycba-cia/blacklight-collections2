

<% document.each do |field_name, field| -%>
  <% if field_name == 'auth_author_display_ss' %>
      <dd class="blacklight-<%= field_name.parameterize %>"><%= field_value document, field_name %></dd>
  <% end %>
  <% if field_name == 'title_short_ss' %>
    <dd class="middle-label blacklight-<%= field_name.parameterize %>"><%= field_value(document, field_name).gsub(" :","").gsub(" /","") %></dd>
  <% end %>
  <% if field_name == 'publishDate_txt' %>
    <dd class="blacklight-<%= field_name.parameterize %>"><%= field_value document, field_name %></dd>
  <% end %>
<% end -%>