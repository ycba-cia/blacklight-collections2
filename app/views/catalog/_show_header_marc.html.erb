
<!-- <%= render_document_heading(document, :tag => :h2) %>-->

<div id="image-section">

  <div class="row">
    <div id="ycba-main-image" class="col-xs-12" aria-live="polite">
      <% if document['isbn_ss'] %>
          <%= image_tag( "/bookcover/isbn/#{document['isbn_ss'][0]}/size/medium", class: 'img-thumbnail center-block', alt: document['title_txt']) %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div id="ycba-main-image-caption" class="col-xs-12" align="center" aria-live="polite"></div>
  </div>

  <div class="row">
    <div id="ycba-image-rights" class="col-xs-12" align="center"><%= display_rights(document) %></div>
    <!--<div id="ycba-thumbnail-controls" class="col-xs-2 pull-right"></div>-->
  </div>

  <div class="row">
    <div id="ycba-thumbnail-controls" class="col-xs-12" align="center"></div>
  </div>

  <div class="row">
    <!--<div id="ycba-downloads" class="col-xs-12" align="center"></div>-->
    <%= render partial: "downloads", locals: {document: document} %>
  </div>

  <div class="row">
    <div id="ycba-request-photography" class="col-xs-12" align="center">
      <%= link_to("Request additional photography", image_request_link(document)) %>
    </div>
  </div>

  <!--
  <div class="row__outer">
    <div class="imagescroll">
    </div>
  </div>
  -->

  <div class="row__outer">
    <div class="imagescroll">
      <div class="row__inner" id="ycba-thumbnail-row-inner"></div>
    </div>
  </div>

</div>

<div id="non-image-section">
  <div class="row">
    <div id="ycba-request-photography" class="col-xs-12" align="center">
      <%= link_to("Request photography", image_request_link(document)) %>
    </div>
  </div>
</div>

<script language="Javascript">updateImageData(<%= @document.cds_url %>,"<%= cds_info_url(@document.cds_url, 1) %>","marc");</script>
