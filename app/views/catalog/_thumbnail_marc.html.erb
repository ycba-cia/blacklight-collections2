<div class="row">

    <div class="col-xs-12 col-sm-4">
      <% error_img = path_to_image('empty_square2.png')  %>
      <% if document['isbn_ss'] %>
        <%= image_tag( "/bookcover/isbn/#{document['isbn_ss'][0]}/size/medium", class: 'ycba-thumbnail', alt: document['title_txt'], onerror: "this.src='#{error_img}';" ) %>
      <% elsif document.cds_url %>
          <%= image_tag cds_thumbnail_url(document.cds_url, 1), class: 'ycba-thumbnail', alt: document['title_txt'], onerror: "this.src='#{error_img}';"  %>
      <% else %>
        <%= image_tag "#{error_img}", class: 'ycba-thumbnail', alt: "No cover image available" %>
      <% end %>
    </div>
